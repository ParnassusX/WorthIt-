# Reduce memory usage during npm install
node_options=--max_old_space_size=2048
production=false
progress=false

# Additional memory optimization settings
cache-min=3600
fetch-retries=2
fetch-retry-factor=2
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000
no-fund=true
no-audit=true
prefer-offline=true