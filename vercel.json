{
  "version": 2,
  "builds": [
    {
      "src": "api/main.py",
      "use": "@vercel/python"
    },
    {
      "src": "bot/webhook_handler.py",
      "use": "@vercel/python"
    },
    {
      "src": "web-app/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/webhook",
      "dest": "bot/webhook_handler.py"
    },
    {
      "src": "/web-app/(.*)",
      "dest": "/web-app/$1"
    },
    {
      "src": "/(.*)",
      "dest": "api/main.py"
    }
  ]
}